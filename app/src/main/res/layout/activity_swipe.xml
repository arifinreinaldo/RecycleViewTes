<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".explore.SwipeActivity"
    android:orientation="vertical">

    <include layout="@layout/template_header" />
    <include layout="@layout/template_info_user" />

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/viewpagertab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorWithoutPadding="false"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorGravity="center"
        app:stl_indicatorColor="@color/colorPrimary"
        app:stl_indicatorThickness="25dp"
        app:stl_indicatorWidth="auto"
        app:stl_indicatorCornerRadius="20dp"
        app:stl_overlineColor="#000000"
        app:stl_overlineThickness="0dp"
        app:stl_underlineColor="#000000"
        app:stl_underlineThickness="0dp"
        app:stl_dividerColor="#000000"
        app:stl_dividerThickness="0dp"
        app:stl_defaultTabBackground="?attr/selectableItemBackground"
        app:stl_defaultTabTextAllCaps="true"
        app:stl_defaultTabTextColor="@color/custom_color"
        app:stl_defaultTabTextSize="12sp"
        app:stl_defaultTabTextHorizontalPadding="16dp"
        app:stl_defaultTabTextMinWidth="0dp"
        app:stl_distributeEvenly="true"
        app:stl_clickable="false"
        app:stl_titleOffset="24dp"
        app:stl_drawDecorationAfterTab="false"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<android.support.design.widget.TabLayout-->
            <!--android:id="@+id/tabLayout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

        <!--</android.support.design.widget.TabLayout>-->
    </android.support.v4.view.ViewPager>
</LinearLayout>